# Environment Configuration Template for trader-v4
# Copy this file to .env and fill in your actual values

# Hyperliquid Configuration
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz

# Database Configuration
DATABASE_URL=postgresql://trader:trader_password@localhost:5432/trading
REDIS_URL=redis://localhost:6379

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_POSITIONS=10
RISK_PER_TRADE=0.02
MAX_DRAWDOWN_LIMIT=0.20

# Telegram Notifications
TELEGRAM_ENABLED=true
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_SILENT=false

# API Keys (if needed for additional data sources)
COINGECKO_API_KEY=
CRYPTOCOMPARE_API_KEY=

# Monitoring
PROMETHEUS_PORT=8080
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Environment
ENVIRONMENT=development
DEBUG=false

# Model Configuration
MODEL_PATH=models/
MODEL_UPDATE_FREQUENCY=daily

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=100000

# Risk Management
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.05
TRAILING_STOP_PERCENTAGE=0.01
MAX_LEVERAGE=5

# Exchange Fees
MAKER_FEE=0.0002
TAKER_FEE=0.0005

# Data Collection
DATA_UPDATE_INTERVAL=60
HISTORICAL_DATA_DAYS=365
TICK_DATA_ENABLED=false

# Strategy Configuration
ENABLED_STRATEGIES=momentum,mean_reversion,arbitrage,market_making
STRATEGY_WEIGHTS=0.3,0.3,0.2,0.2

# Performance Tracking
PERFORMANCE_REPORT_INTERVAL=daily
PERFORMANCE_REPORT_EMAIL=

# Security
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
ENABLE_2FA=false

# Jupyter Notebook
JUPYTER_PORT=8888
JUPYTER_TOKEN=

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest